<script>
$('.deleteMe').live('click', function(){
    $(this).parent().remove();
    $('#itemlist').listview('refresh');
});

$('#additems').click(function() {
    var newitem = $('#items').val();

    if(newitem != '') {
        $('#itemlist').append('<li><a>' + newitem + '</a><a class="deleteMe"></a></li>').listview('refresh');
        $('#items').val('');
    } else {
        alert('Nothing to add');   
    }
});
</script>
